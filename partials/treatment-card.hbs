{{!-- Treatment Card Partial for MMHC --}}
<div class="treatment-card">
    <div class="card-header">
        <div class="treatment-icon">{{icon}}</div>
        <h3 class="treatment-title">{{title}}</h3>
    </div>
    
    <div class="card-content">
        <p class="treatment-description">{{description}}</p>
        
        {{#if conditions}}
        <div class="treatment-section">
            <h4>Conditions We Treat:</h4>
            <p class="conditions-list">{{conditions}}</p>
        </div>
        {{/if}}
        
        {{#if approach}}
        <div class="treatment-section">
            <h4>Our Approach:</h4>
            <p class="approach-description">{{approach}}</p>
        </div>
        {{/if}}
        
        {{#if features}}
        <div class="treatment-section">
            <h4>Key Features:</h4>
            <ul class="treatment-features">
                {{#each features}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
    
    {{#if link}}
    <div class="card-footer">
        <a href="{{link}}" class="treatment-link">Learn More â†’</a>
    </div>
    {{/if}}
</div>