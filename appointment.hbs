{{!< default}}

{{!-- MMHC Appointment Page --}}
<main class="site-main">
    <article class="gh-article appointment-page">
        
        <header class="gh-article-header gh-canvas">
            <h1 class="gh-article-title">Book Your Appointment</h1>
            <p class="gh-article-excerpt">
                Take the first step towards optimal health and wellness for you and your family
            </p>
        </header>

        <div class="gh-content gh-canvas">
            
            {{!-- Introduction --}}
            <section class="appointment-intro">
                <p class="intro-text">
                    We're here to support you on your journey to optimal health. Whether you're seeking care for 
                    yourself, your child, or your family, our team of experienced practitioners is ready to 
                    provide personalized, compassionate care tailored to your unique needs.
                </p>
            </section>

            {{!-- Appointment Types --}}
            <section class="appointment-types">
                <h2>Choose Your Consultation Type</h2>
                <div class="consultation-grid">
                    <div class="consultation-card">
                        <h3>Initial Consultation</h3>
                        <div class="consultation-duration">90 minutes</div>
                        <p>Comprehensive health assessment and personalized treatment plan development</p>
                        <ul>
                            <li>Detailed health history review</li>
                            <li>Constitutional analysis</li>
                            <li>Treatment recommendations</li>
                            <li>Lifestyle guidance</li>
                        </ul>
                    </div>
                    <div class="consultation-card">
                        <h3>Follow-up Consultation</h3>
                        <div class="consultation-duration">45 minutes</div>
                        <p>Progress review and treatment plan adjustments for existing patients</p>
                        <ul>
                            <li>Treatment progress evaluation</li>
                            <li>Remedy adjustments</li>
                            <li>Ongoing support</li>
                            <li>Questions and concerns</li>
                        </ul>
                    </div>
                    <div class="consultation-card">
                        <h3>Family Consultation</h3>
                        <div class="consultation-duration">120 minutes</div>
                        <p>Comprehensive wellness planning for the entire family</p>
                        <ul>
                            <li>Multiple family member assessments</li>
                            <li>Family health planning</li>
                            <li>Preventive care strategies</li>
                            <li>Lifestyle optimization</li>
                        </ul>
                    </div>
                </div>
            </section>

            {{!-- Booking Form --}}
            <section class="booking-section">
                <h2>Schedule Your Appointment</h2>
                {{> "appointment-form"}}
            </section>

            {{!-- Preparation Guidelines --}}
            <section class="preparation-guidelines">
                <h2>Preparing for Your Visit</h2>
                <div class="guidelines-content">
                    <div class="guideline-section">
                        <h3>What to Bring</h3>
                        <ul>
                            <li>Previous medical records and test results</li>
                            <li>List of current medications and supplements</li>
                            <li>Insurance information and identification</li>
                            <li>Completed intake forms (sent via email)</li>
                        </ul>
                    </div>
                    <div class="guideline-section">
                        <h3>Before Your Appointment</h3>
                        <ul>
                            <li>Complete the health questionnaire we'll email you</li>
                            <li>Prepare a list of your main health concerns</li>
                            <li>Note any questions you'd like to discuss</li>
                            <li>Arrive 15 minutes early for check-in</li>
                        </ul>
                    </div>
                    <div class="guideline-section">
                        <h3>What to Expect</h3>
                        <ul>
                            <li>Detailed discussion of your health history</li>
                            <li>Physical examination if needed</li>
                            <li>Personalized treatment plan development</li>
                            <li>Education about your condition and treatment</li>
                        </ul>
                    </div>
                </div>
            </section>

            {{!-- Location & Contact --}}
            <section class="location-contact">
                <div class="location-grid">
                    <div class="contact-info">
